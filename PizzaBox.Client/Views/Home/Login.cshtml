@model PizzaBox.Client.Models.UserViewModel

<form action="/home/login" method="post">
  @Html.AntiForgeryToken()

  <label asp-for="@Model.UName">username</label>
  <input type="text" asp-for="@Model.UName" />
  

  <label asp-for="@Model.Password">password</label>
  <input type="password" asp-for="@Model.Password" />
  

  <button type="reset">Clear</button>
  <button type="submit">Login</button>
</form>